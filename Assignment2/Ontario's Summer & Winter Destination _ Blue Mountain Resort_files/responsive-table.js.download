define(function(require){var $=require("jquery"),helpers=require("helpers"),dom;init();function init(){cacheDom();attachHandlers();addResponsiveTablesContainer();addFeaturedColumnForContainer()}function cacheDom(){dom={};dom.window=$(window);dom.responsivetable=$(".responsive-table, .responsive-table-variation")}function attachHandlers(){dom.responsivetable.on("scroll",helpers.debounce(fixedColumn,1,true))}function fixedColumn(){var offset=$(this).scrollLeft();$(this).parent()[0].dataset.scroll=offset}function addResponsiveTablesContainer(){dom.responsivetable.wrap("<div class='responsive-table-container' data-scroll='0'></div>");var container=dom.responsivetable.parent();container.prepend("<div class='responsive-table-container--fixed-column'></div>")}function addFeaturedColumnForContainer(){var featuredColumns=dom.responsivetable.find("th[class^='featured-column']");featuredColumns.each(function(){var container=$(this).closest(".responsive-table-container");container.addClass("responsive-table-container--featured");if($(this).is(".featured-column-v2")){container.addClass("featured-v2")}})}});